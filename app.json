
{
  "expo": {
    "name": "SOFAST Global Drills",
    "slug": "SOFAST Global Drills",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/7cadd481-5bea-470d-802a-1f44d5a96178.jpeg",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/7cadd481-5bea-470d-802a-1f44d5a96178.jpeg",
      "resizeMode": "contain",
      "backgroundColor": "#2D4A2B"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.teamsofast.sofastglobal",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "SOFAST Global needs camera access to record your shooting drills and analyze your performance.",
        "NSMicrophoneUsageDescription": "SOFAST Global needs microphone access to detect shots and provide accurate timing.",
        "NSMotionUsageDescription": "SOFAST Global uses motion sensors to detect recoil and analyze your shooting form."
      },
      "entitlements": {
        "com.apple.developer.game-center": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/7cadd481-5bea-470d-802a-1f44d5a96178.jpeg",
        "backgroundColor": "#2D4A2B"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.teamsofast.sofastglobal",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/images/final_quest_240x240.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router",
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "SOFAST Global needs camera access to record your shooting drills and analyze your performance.",
          "microphonePermission": "SOFAST Global needs microphone access to detect shots and provide accurate timing.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "SOFAST Global needs microphone access to detect shots and provide accurate timing."
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "SOFAST Global uses motion sensors to detect recoil and analyze your shooting form."
        }
      ]
    ],
    "scheme": "sofastglobal",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      },
      "privacyPolicyUrl": "https://tmsofast.com/privacy",
      "websiteUrl": "https://tmsofast.com",
      "supportUrl": "https://tmsofast.com/support"
    }
  },
  "scheme": "SOFAST Global Drills"
}
